@model Solare.App.ViewModels.SimulacaoViewModel

@{
    ViewData["Title"] = "Nova Simulacao";
}

<h3 style="padding-top: 50px">@ViewData["Title"] </h3>

<hr />
<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-1">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="@(new SelectList(Model.Clientes, "Id", "Nome"))">
                    <option></option>
                </select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="TipoImovel" class="control-label"></label><br />
                <input type="radio" name="TipoProduto" value="1" id="tipo1" checked /> Casa <br />
                <input type="radio" name="TipoProduto" value="2" id="tipo2" /> Apartamento
            </div>

            <div class="form-group mb-1">
                <label asp-for="OrcamentoMaximo" class="control-label"></label>
                <input asp-for="OrcamentoMaximo" class="form-control" />
                <span asp-validation-for="OrcamentoMaximo" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="ConsumoMedioMensal" class="control-label"></label>
                <input asp-for="ConsumoMedioMensal" class="form-control" />
                <span asp-validation-for="ConsumoMedioMensal" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="ValorMedioContaEnergia" class="control-label"></label>
                <input asp-for="ValorMedioContaEnergia" class="form-control" />
                <span asp-validation-for="ValorMedioContaEnergia" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <label asp-for="AnosPermanencia" class="control-label"></label>
                <input asp-for="AnosPermanencia" class="form-control" />
                <span asp-validation-for="AnosPermanencia" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <label asp-for="EspacoTotalInstalacao" class="control-label"></label>
                <input asp-for="EspacoTotalInstalacao" class="form-control" />
                <span asp-validation-for="EspacoTotalInstalacao" class="text-danger"></span>
            </div>

            <div class="form-group mb-1">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
