@model IEnumerable<Solare.App.ViewModels.SimulacaoViewModel>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>

            <td class="text-right">
                    <a class="btn btn-warning" asp-controller="Simulacao" asp-action="Relatorio" asp-route-id="@item.Id">Relatorio</a>
                    <a class="btn btn-danger" asp-controller="Simulacao" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
