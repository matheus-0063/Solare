@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de Registro";
}

<h1>@ViewData["Title"]</h1>
@{
    @if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Este aplicativo não possui atualmente um remetente de e-mail real configurado. <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar sua conta</a>
        </p>
    }
    else
    {
        <p>
            Por favor, verifique seu e-mail para confirmar sua conta.
        </p>
    }

}

